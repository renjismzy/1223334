{
  "name": "mcp-document-converter",
  "version": "1.0.2",
  "description": "文档格式转换MCP服务",
  "type": "mcp-server",
  "deployment": {
    "resources": {
      "cpu": "0.5",
      "memory": "512Mi",
      "storage": "1Gi"
    },
    "scaling": {
      "minReplicas": 1,
      "maxReplicas": 3,
      "targetCPUUtilizationPercentage": 80
    },
    "env": {
      "NODE_ENV": "production"
    }
  },
  "mcp": {
    "server": {
      "command": "npx",
      "args": ["mcp-document-converter", "mcp"],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "api": {
      "tools": [
        {
          "name": "convert_document",
          "description": "将文档在不同格式之间进行转换（PDF、Word、Markdown、HTML、TXT）"
        },
        {
          "name": "get_document_info",
          "description": "获取文档信息（格式、大小、页数等）"
        },
        {
          "name": "list_supported_formats",
          "description": "列出所有支持的输入和输出格式"
        }
      ]
    }
  },
  "network": {
    "ports": [],
    "healthCheck": {
      "path": "/health",
      "initialDelaySeconds": 10,
      "periodSeconds": 30
    }
  }
}