{
  "name": "mcp-document-converter",
  "version": "1.0.1",
  "description": "A Model Context Protocol (MCP) server for document conversion between various formats",
  "main": "dist/index.js",
  "bin": {
    "mcp-document-converter": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "document",
    "converter",
    "pdf",
    "word",
    "markdown",
    "model-context-protocol"
  ],
  "author": "MCP Document Converter Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.1.1",
    "mammoth": "^1.6.0",
    "marked": "^9.1.6",
    "mime-types": "^2.1.35",
    "pdf-parse": "^1.1.1",
    "puppeteer": "^21.5.2",
    "turndown": "^7.1.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.8.0",
    "@types/pdf-parse": "^1.1.5",
    "@types/turndown": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mcp-tools/mcp-document-converter.git"
  },
  "homepage": "https://github.com/mcp-tools/mcp-document-converter#readme",
  "bugs": {
    "url": "https://github.com/mcp-tools/mcp-document-converter/issues"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "mcp-config.json"
  ],
